{
	"id":"com.moimz.imodule.module.banner",
	"icon":"xi xi-coupon",
	"title":{
		"ko":"배너"
	},
	"version":"3.2.0",
	"description":{
		"ko":"배너노출과 관련된 전반적인 기능을 관리합니다."
	},
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"https://www.imodules.io",
	"versionChecker":"https://api.moimz.com/download/latest",
	"dependencies":{
		"core":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"widget":true,
	"databases":{
		"banner_admin_table":{
			"columns":{
				"midx":{
					"type":"int",
					"length":11,
					"comment":"회원고유번호"
				}
			},
			"indexes":{
				"midx":"primary_key"
			},
			"comment":"banner 관리자 테이블"
		},
		"banner_table":{
			"columns":{
				"bid":{
					"type":"varchar",
					"length":20,
					"comment":"배너아이디"
				},
				"title":{
					"type":"varchar",
					"length":50,
					"comment":"배너명"
				}
			},
			"indexes":{
				"bid":"primary_key"
			},
			"comment":"배너 테이블"
		},
		"banner_item_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"고유값"
				},
				"bid":{
					"type":"varchar",
					"length":20,
					"comment":"배너아이디"
				},
				"url":{
					"type":"varchar",
					"length":255,
					"comment":"링크주소"
				},
				"target":{
					"type":"enum",
					"length":"'_blank','_self','_top'",
					"default":"_blank",
					"comment":"새창여부"
				},
				"title":{
					"type":"varchar",
					"length":255,
					"is_null":true,
					"comment":"배너제목색상"
				},
				"title_color":{
					"type":"char",
					"length":7,
					"is_null":true,
					"comment":"배너제목색상"
				},
				"text":{
					"type":"text",
					"is_null":true,
					"comment":"배너내용"
				},
				"text_color":{
					"type":"char",
					"length":7,
					"is_null":true,
					"comment":"배너내용색상"
				},
				"image":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"배너이미지"
				},
				"permission":{
					"type":"varchar",
					"length":255,
					"comment":"배너를 보일 권한설정"
				},
				"sort":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"정렬"
				},
				"reg_date":{
					"type":"int",
					"length":11,
					"comment":"등록일"
				}
			},
			"indexes":{
				"idx":"primary_key",
				"bid":"index"
			},
			"auto_increment":"idx",
			"comment":"배너 항목 테이블"
		}
	}
}